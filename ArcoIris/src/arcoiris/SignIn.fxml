            <Image url="@assets/icon_rainbow_heart.png" />
         </image>
      </ImageView>
      <Label layoutX="224.0" layoutY="325.0" onMouseReleased="#signInMouseReleased" text="Não tenho uma conta" textFill="#00bfff" />
    </children>
